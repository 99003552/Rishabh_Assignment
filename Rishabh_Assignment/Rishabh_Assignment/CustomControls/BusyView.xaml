<?xml version="1.0" encoding="UTF-8"?>
<ContentView  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rishabh_Assignment.CustomControls.BusyView">

        <Grid>
            <BoxView Color="Black" Opacity="0.5"/>
            <Frame Margin="16" VerticalOptions="Center" >
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label x:Name="messageLabel" Text="Connecting to server..." VerticalOptions="Center"/>
                    <ActivityIndicator IsRunning="True" VerticalOptions="Center" />
                </StackLayout>
            </Frame>
        </Grid>

</ContentView>